#/bin/bash

while true; do
  read -p "All data in tables will be destroyed. Are you sure? (yes/no) " yn
    case $yn in
      yes )
        migrations=`ls *.sql`

        for table in $migrations
          do
            echo "Executing: $table"
            docker exec -i mysql mysql -uroot -p1 parser < $table
          done
          break;;
      no ) exit;;
      * ) echo "Please answer yes on no.";;
    esac
done
